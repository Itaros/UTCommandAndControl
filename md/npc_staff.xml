<?xml version="1.0" encoding="UTF-8" ?>
<diff>
  <replace sel="//cue[@name='DefaultComm']/actions/do_else/add_player_choice_return">
    <do_if value="$actor.iscontrolentity and $actor.type == entitytype.manager and $actor.isplayerowned">
      <add_player_choice text="{5554103,9}" section="cStaff_UT_CAC_Manager" position="6"/>
    </do_if>
    <do_else>
      <add_player_choice_return text="{1002,2}" position="bottom_right" comment="Goodbye"/>
    </do_else>
  </replace>
  <add sel="//cue[@name='SectionHandler']/actions/do_else" pos="before">
    <do_elseif value="event.param == 'cStaff_UT_CAC_Manager'">
      <signal_cue_instantly cue="md.UT_CAC_Manager.Main" param="$actor"/>
      <cancel_cue cue="OnPlatformPopulation_Staff"/>
    </do_elseif>
  </add>
  <add sel="//cue[@name='OnPlatformPopulation_Staff']/cues">
        <cue name="NPC_Cancel_Dialogue_Tree">
          <conditions>
            <event_object_signalled object="$actor" param="'cancel Vanilla dialogue tree'"/>
          </conditions>
          <actions>
            <cancel_cue cue="OnPlatformPopulation_Staff"/>
          </actions>
        </cue>
  </add>
</diff>